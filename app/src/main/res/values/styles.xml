<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/muli_regular</item>

        <item name="android:statusBarColor">@color/colorPrimaryDarker</item>
        <item name="android:windowTranslucentStatus">false</item> <!-- transparent status bar -->

        <item name="android:windowDrawsSystemBarBackgrounds">true</item> <!--Changes navigationBarColor too-->
        <item name="android:navigationBarColor">@color/colorPrimaryDarker</item>

        <!--// Display color under navigation bar (API 21+)-->
        <item name="android:windowTranslucentNavigation">false</item>

        <!--bottomNavigation.setTranslucentNavigationEnabled(true);-->

    </style>



    <style name="TextInputLayoutTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
